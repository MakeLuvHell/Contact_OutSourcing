<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style android:name="Base.Theme.Contacts" android:parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item android:name="colorPrimary">@color/colorPrimary</item>
        <item android:name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item android:name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item android:name="colorSecondary">@color/colorSecondary</item>
        <item android:name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item android:name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Background color. -->
        <item android:name="android:colorBackground">@color/colorBackground</item>
        <item android:name="colorOnBackground">@color/colorOnBackground</item>
        <!-- Surface color. -->
        <item android:name="colorSurface">@color/colorSurface</item>
        <item android:name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Error color. -->
        <item android:name="colorError">@color/colorError</item>
        <item android:name="colorOnError">@color/colorOnError</item>
        <!-- Status bar and navigation bar color. -->
        <item android:name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryVariant</item>
        <item android:name="android:navigationBarColor" tools:targetApi="l">@color/colorBackground</item>
    </style>

    <!-- Dark theme specifics -->
    <style android:name="Base.Theme.Contacts.Dark" android:parent="Base.Theme.ContactApp">
        <item android:name="colorPrimary">@color/colorPrimaryDark</item>
        <item android:name="colorPrimaryVariant">@color/colorPrimaryVariantDark</item>
        <item android:name="colorOnPrimary">@color/colorOnPrimaryDark</item>
        <item android:name="colorSecondary">@color/colorSecondaryDark</item>
        <item android:name="colorSecondaryVariant">@color/colorSecondaryVariantDark</item>
        <item android:name="colorOnSecondary">@color/colorOnSecondaryDark</item>
        <item android:name="android:colorBackground">@color/colorBackgroundDark</item>
        <item android:name="colorOnBackground">@color/colorOnBackgroundDark</item>
        <item android:name="colorSurface">@color/colorSurfaceDark</item>
        <item android:name="colorOnSurface">@color/colorOnSurfaceDark</item>
        <item android:name="colorError">@color/colorErrorDark</item>
        <item android:name="colorOnError">@color/colorOnErrorDark</item>
        <item android:name="android:statusBarColor">@color/colorPrimaryVariantDark</item>
        <item android:name="android:navigationBarColor">@color/colorBackgroundDark</item>
    </style>
</resources>